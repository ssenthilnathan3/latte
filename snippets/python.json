  "frappe_get_doc": {
    "prefix": ["get_doc", "frappe_get_doc"],
    "body": [
      "doc = frappe.get_doc(\"${1:DocType}\", \"${2:name}\")"
    ],
    "description": "Get a Frappe document"
  },
  "frappe_new_doc": {
    "prefix": ["new_doc", "frappe_new_doc"],
    "body": [
      "doc = frappe.new_doc(\"${1:DocType}\")",
      "doc.${2:field} = \"${3:value}\"",
      "doc.insert()"
    ],
    "description": "Create a new Frappe document"
  },
  "frappe_db_get_value": {
    "prefix": ["db_get_value", "frappe_db_get_value"],
    "body": [
      "value = frappe.db.get_value(\"${1:DocType}\", \"${2:name}\", \"${3:fieldname}\")"
    ],
    "description": "Get a single value from database"
  },
  "frappe_db_get_list": {
    "prefix": ["db_get_list", "frappe_db_get_list"],
    "body": [
      "data = frappe.db.get_list(\"${1:DocType}\", {",
      "\tfilters={\"${2:field}\": \"${3:value}\"},",
      "\tfields=[\"${4:field1}\", \"${5:field2}\"]",
      "})"
    ],
    "description": "Get list of documents from database"
  },
  "frappe_db_get_all": {
    "prefix": ["db_get_all", "frappe_get_all"],
