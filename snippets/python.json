      "def ${1:api_function}():",
      "\t\"\"\"GET API endpoint\"\"\"",
      "\tdata = {\"message\": \"${2:Hello World}\"}",
      "\treturn data"
    ],
    "description": "Frappe GET API endpoint"
  },
  "frappe_api_post": {
    "prefix": ["api_post", "frappe_api_post"],
    "body": [
      "@frappe.whitelist(methods=[\"POST\"])",
