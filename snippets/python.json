    "prefix": ["whitelist", "frappe_whitelist"],
    "body": [
      "@frappe.whitelist()",
      "def ${1:function_name}():",
      "\t\"\"\"${2:Function description}\"\"\"",
      "\t${3:pass}"
    ],
    "description": "Create a whitelisted Frappe function"
  },
  "frappe_enqueue": {
    "prefix": ["enqueue", "frappe_enqueue"],
    "body": [
      "frappe.enqueue(",
      "\t\"${1:app.module.function}\",",
      "\tqueue=\"${2:default}\",",
      "\ttimeout=${3:300},",
      "\t${4:param}=\"${5:value}\"",
      ")"
    ],
    "description": "Enqueue a background job"
  },
