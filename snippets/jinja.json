{
  "frappe_jinja_form": {
    "prefix": ["form", "frappe_form"],
    "body": [
      "{% macro render_field(field, doc=None) %}",
      "  {% if field.fieldtype == 'Data' %}",
      "    <input type=\"text\" name=\"{{ field.fieldname }}\" ",
      "           value=\"{{ doc[field.fieldname] if doc else '' }}\" ",
      "           class=\"form-control\" {{ 'required' if field.reqd else '' }}>",
      "  {% elif field.fieldtype == 'Text' %}",
      "    <textarea name=\"{{ field.fieldname }}\" class=\"form-control\" ",
      "              {{ 'required' if field.reqd else '' }}>{{ doc[field.fieldname] if doc else '' }}</textarea>",
      "  {% elif field.fieldtype == 'Select' %}",
      "    <select name=\"{{ field.fieldname }}\" class=\"form-control\" {{ 'required' if field.reqd else '' }}>",
      "      {% for option in field.options.split('\\n') %}",
      "        <option value=\"{{ option }}\" {{ 'selected' if doc and doc[field.fieldname] == option else '' }}>{{ option }}</option>",
      "      {% endfor %}",
      "    </select>",
      "  {% endif %}",
      "{% endmacro %}",
      "",
      "<div class=\"form-group\">",
      "  <label for=\"${1:fieldname}\">{{ _(\"${2:Field Label}\") }}</label>",
      "  {{ render_field(${3:field_object}, ${4:doc}) }}",
      "</div>"
    ],
    "description": "Frappe Jinja form field renderer macro"
  },
  "frappe_jinja_table": {
    "prefix": ["table", "frappe_table"],
    "body": [
      "<table class=\"table table-striped\">",
      "  <thead>",
      "    <tr>",
      "      {% for column in ${1:columns} %}",
      "        <th>{{ _(column.label) }}</th>",
      "      {% endfor %}",
      "    </tr>",
      "  </thead>",
      "  <tbody>",
      "    {% for row in ${2:data} %}",
      "      <tr>",
      "        {% for column in ${1:columns} %}",
      "          <td>{{ row[column.fieldname] }}</td>",
      "        {% endfor %}",
      "      </tr>",
      "    {% else %}",
      "      <tr>",
      "        <td colspan=\"{{ ${1:columns}|length }}\" class=\"text-center text-muted\">",
      "          {{ _(\"No data found\") }}",
      "        </td>",
      "      </tr>",
      "    {% endfor %}",
      "  </tbody>",
      "</table>"
    ],
    "description": "Frappe Jinja data table template"
  },
  "frappe_jinja_doctype_list": {
    "prefix": ["doctype_list", "frappe_doctype_list"],
    "body": [
      "{% for doc in ${1:doc_list} %}",
      "  <div class=\"list-item\">",
      "    <div class=\"list-item-content\">",
      "      <h5><a href=\"/app/${2:doctype_route}/{{ doc.name }}\">{{ doc.${3:title_field} }}</a></h5>",
      "      <p class=\"text-muted\">{{ doc.${4:description_field} or \"\" }}</p>",
      "    </div>",
      "    <div class=\"list-item-meta\">",
      "      <span class=\"indicator {{ 'green' if doc.${5:status_field} == 'Active' else 'red' }}\">",
      "        {{ doc.${5:status_field} }}",
      "      </span>",
      "      <small class=\"text-muted\">{{ frappe.format_date(doc.modified) }}</small>",
      "    </div>",
      "  </div>",
      "{% else %}",
      "  <div class=\"text-center text-muted\">",
      "    <p>{{ _(\"No ${2:doctype_route} found\") }}</p>",
      "  </div>",
      "{% endfor %}"
    ],
    "description": "Frappe DocType list view template"
  },
  "frappe_jinja_cards": {
    "prefix": ["cards", "frappe_cards"],
    "body": [
      "<div class=\"row\">",
      "  {% for item in ${1:items} %}",
      "    <div class=\"col-md-{{ 12 // ${2:items_per_row|default(3)} }}\">",
      "      <div class=\"card mb-3\">",
      "        {% if item.${3:image_field} %}",
      "          <img src=\"{{ item.${3:image_field} }}\" class=\"card-img-top\" alt=\"{{ item.${4:title_field} }}\">",
      "        {% endif %}",
      "        <div class=\"card-body\">",
      "          <h5 class=\"card-title\">{{ item.${4:title_field} }}</h5>",
      "          <p class=\"card-text\">{{ item.${5:description_field}[:100] }}{{ '...' if item.${5:description_field}|length > 100 else '' }}</p>",
      "          <a href=\"/app/${6:doctype_route}/{{ item.name }}\" class=\"btn btn-primary\">{{ _(\"View Details\") }}</a>",
      "        </div>",
      "      </div>",
      "    </div>",
      "    {% if loop.index % ${2:items_per_row|default(3)} == 0 %}",
      "      </div><div class=\"row\">",
      "    {% endif %}",
      "  {% endfor %}",
      "</div>"
    ],
    "description": "Frappe card-based layout template"
  },
  "frappe_jinja_filters": {
    "prefix": ["filters", "frappe_filters"],
    "body": [
      "<div class=\"filter-section mb-3\">",
      "  <form method=\"GET\">",
      "    <div class=\"row\">",
      "      <div class=\"col-md-3\">",
      "        <label for=\"search\">{{ _(\"Search\") }}</label>",
      "        <input type=\"text\" name=\"search\" class=\"form-control\" ",
      "               value=\"{{ request.args.get('search', '') }}\" placeholder=\"{{ _(\"Search...\") }}\">",
      "      </div>",
      "      <div class=\"col-md-3\">",
      "        <label for=\"status\">{{ _(\"Status\") }}</label>",
      "        <select name=\"status\" class=\"form-control\">",
      "          <option value=\"\">{{ _(\"All\") }}</option>",
      "          {% for status in ${1:status_options} %}",
      "            <option value=\"{{ status }}\" {{ 'selected' if request.args.get('status') == status else '' }}>",
      "              {{ _(status) }}",
      "            </option>",
      "          {% endfor %}",
      "        </select>",
      "      </div>",
      "      <div class=\"col-md-3\">",
      "        <label for=\"date_from\">{{ _(\"From Date\") }}</label>",
      "        <input type=\"date\" name=\"date_from\" class=\"form-control\" ",
      "               value=\"{{ request.args.get('date_from', '') }}\">",
      "      </div>",
      "      <div class=\"col-md-3\">",
      "        <label>&nbsp;</label>",
      "        <button type=\"submit\" class=\"btn btn-primary form-control\">{{ _(\"Filter\") }}</button>",
      "      </div>",
      "    </div>",
      "  </form>",
      "</div>"
    ],
    "description": "Frappe filter form template"
  },
  "frappe_jinja_breadcrumbs": {
    "prefix": ["breadcrumbs", "frappe_breadcrumbs"],
    "body": [
      "<nav aria-label=\"breadcrumb\">",
      "  <ol class=\"breadcrumb\">",
      "    <li class=\"breadcrumb-item\"><a href=\"/app\">{{ _(\"Home\") }}</a></li>",
      "    {% for crumb in ${1:breadcrumbs} %}",
      "      {% if loop.last %}",
      "        <li class=\"breadcrumb-item active\" aria-current=\"page\">{{ _(crumb.title) }}</li>",
      "      {% else %}",
      "        <li class=\"breadcrumb-item\"><a href=\"{{ crumb.route }}\">{{ _(crumb.title) }}</a></li>",
      "      {% endif %}",
      "    {% endfor %}",
      "  </ol>",
      "</nav>"
    ],
    "description": "Frappe breadcrumb navigation template"
  },
  "frappe_jinja_pagination": {
    "prefix": ["pagination", "frappe_pagination"],
    "body": [
      "<nav aria-label=\"Page navigation\">",
      "  <ul class=\"pagination justify-content-center\">",
      "    {% if ${1:page_info}.has_previous %}",
      "      <li class=\"page-item\">",
      "        <a class=\"page-link\" href=\"?{{ request.query_string.decode() | replace('page=' + ${1:page_info}.page|string, 'page=' + (${1:page_info}.page - 1)|string) }}\">",
      "          {{ _(\"Previous\") }}",
      "        </a>",
      "      </li>",
      "    {% endif %}",
      "",
      "    {% for page_num in range(1, ${1:page_info}.total_pages + 1) %}",
      "      {% if page_num == ${1:page_info}.page %}",
      "        <li class=\"page-item active\">",
      "          <span class=\"page-link\">{{ page_num }}</span>",
      "        </li>",
      "      {% else %}",
      "        <li class=\"page-item\">",
      "          <a class=\"page-link\" href=\"?{{ request.query_string.decode() | replace('page=' + ${1:page_info}.page|string, 'page=' + page_num|string) }}\">",
      "            {{ page_num }}",
      "          </a>",
      "        </li>",
      "      {% endif %}",
      "    {% endfor %}",
      "",
      "    {% if ${1:page_info}.has_next %}",
      "      <li class=\"page-item\">",
      "        <a class=\"page-link\" href=\"?{{ request.query_string.decode() | replace('page=' + ${1:page_info}.page|string, 'page=' + (${1:page_info}.page + 1)|string) }}\">",
      "          {{ _(\"Next\") }}",
      "        </a>",
      "      </li>",
      "    {% endif %}",
      "  </ul>",
      "</nav>"
    ],
    "description": "Frappe pagination template"
  },
  "frappe_jinja_alerts": {
    "prefix": ["alert", "frappe_alert"],
    "body": [
      "{% if ${1:messages} %}",
      "  {% for message in ${1:messages} %}",
      "    <div class=\"alert alert-{{ message.type or 'info' }} alert-dismissible fade show\" role=\"alert\">",
      "      {% if message.type == 'error' %}",
      "        <i class=\"fa fa-exclamation-triangle\"></i>",
      "      {% elif message.type == 'success' %}",
      "        <i class=\"fa fa-check-circle\"></i>",
      "      {% elif message.type == 'warning' %}",
      "        <i class=\"fa fa-exclamation-circle\"></i>",
      "      {% else %}",
      "        <i class=\"fa fa-info-circle\"></i>",
      "      {% endif %}",
      "      {{ _(message.text) }}",
      "      <button type=\"button\" class=\"btn-close\" data-bs-dismiss=\"alert\" aria-label=\"Close\"></button>",
      "    </div>",
      "  {% endfor %}",
      "{% endif %}"
    ],
    "description": "Frappe alert/message display template"
  },
  "frappe_jinja_tabs": {
    "prefix": ["tabs", "frappe_tabs"],
    "body": [
      "<ul class=\"nav nav-tabs\" id=\"${1:tab_id}\" role=\"tablist\">",
      "  {% for tab in ${2:tabs} %}",
      "    <li class=\"nav-item\" role=\"presentation\">",
      "      <button class=\"nav-link {{ 'active' if loop.first else '' }}\" ",
      "              id=\"{{ tab.id }}-tab\" data-bs-toggle=\"tab\" data-bs-target=\"#{{ tab.id }}\" ",
      "              type=\"button\" role=\"tab\" aria-controls=\"{{ tab.id }}\" ",
      "              aria-selected=\"{{ 'true' if loop.first else 'false' }}\">",
      "        {{ _(tab.label) }}",
      "      </button>",
      "    </li>",
      "  {% endfor %}",
      "</ul>",
      "<div class=\"tab-content\" id=\"${1:tab_id}Content\">",
      "  {% for tab in ${2:tabs} %}",
      "    <div class=\"tab-pane fade {{ 'show active' if loop.first else '' }}\" ",
      "         id=\"{{ tab.id }}\" role=\"tabpanel\" aria-labelledby=\"{{ tab.id }}-tab\">",
      "      <div class=\"p-3\">",
      "        {{ tab.content }}",
      "      </div>",
      "    </div>",
      "  {% endfor %}",
      "</div>"
    ],
    "description": "Frappe tabs component template"
  },
  "frappe_jinja_modal": {
    "prefix": ["modal", "frappe_modal"],
    "body": [
      "<div class=\"modal fade\" id=\"${1:modal_id}\" tabindex=\"-1\" aria-labelledby=\"${1:modal_id}Label\" aria-hidden=\"true\">",
      "  <div class=\"modal-dialog modal-${2:lg}\">",
      "    <div class=\"modal-content\">",
      "      <div class=\"modal-header\">",
      "        <h5 class=\"modal-title\" id=\"${1:modal_id}Label\">{{ _(\"${3:Modal Title}\") }}</h5>",
      "        <button type=\"button\" class=\"btn-close\" data-bs-dismiss=\"modal\" aria-label=\"Close\"></button>",
      "      </div>",
      "      <div class=\"modal-body\">",
      "        ${4:<!-- Modal content here -->}",
      "      </div>",
      "      <div class=\"modal-footer\">",
      "        <button type=\"button\" class=\"btn btn-secondary\" data-bs-dismiss=\"modal\">{{ _(\"Close\") }}</button>",
      "        <button type=\"button\" class=\"btn btn-primary\" id=\"${1:modal_id}Save\">{{ _(\"Save\") }}</button>",
      "      </div>",
      "    </div>",
      "  </div>",
      "</div>"
    ],
    "description": "Frappe modal dialog template"
  },
  "frappe_jinja_timeline": {
    "prefix": ["timeline", "frappe_timeline"],
    "body": [
      "<div class=\"timeline\">",
      "  {% for event in ${1:timeline_events} %}",
      "    <div class=\"timeline-item {{ 'timeline-item-' + event.type if event.type else '' }}\">",
      "      <div class=\"timeline-marker\">",
      "        {% if event.icon %}",
      "          <i class=\"fa fa-{{ event.icon }}\"></i>",
      "        {% else %}",
      "          <div class=\"timeline-marker-dot\"></div>",
      "        {% endif %}",
      "      </div>",
      "      <div class=\"timeline-content\">",
      "        <div class=\"timeline-header\">",
      "          <h6 class=\"timeline-title\">{{ _(event.title) }}</h6>",
      "          <small class=\"timeline-time text-muted\">{{ frappe.format_datetime(event.timestamp) }}</small>",
      "        </div>",
      "        <div class=\"timeline-body\">",
      "          <p>{{ _(event.description) }}</p>",
      "          {% if event.user %}",
      "            <small class=\"text-muted\">by {{ event.user }}</small>",
      "          {% endif %}",
      "        </div>",
      "      </div>",
      "    </div>",
      "  {% endfor %}",
      "</div>"
    ],
    "description": "Frappe timeline/activity feed template"
  },
  "frappe_jinja_stats": {
    "prefix": ["stats", "frappe_stats"],
    "body": [
      "<div class=\"row stats-row\">",
      "  {% for stat in ${1:statistics} %}",
      "    <div class=\"col-md-{{ 12 // ${1:statistics}|length }}\">",
      "      <div class=\"card stat-card text-center\">",
      "        <div class=\"card-body\">",
      "          <div class=\"stat-icon mb-2\">",
      "            <i class=\"fa fa-{{ stat.icon or 'chart-bar' }} fa-2x text-{{ stat.color or 'primary' }}\"></i>",
      "          </div>",
      "          <h3 class=\"stat-number\">{{ stat.value|int if stat.value else 0 }}</h3>",
      "          <p class=\"stat-label text-muted mb-0\">{{ _(stat.label) }}</p>",
      "          {% if stat.change %}",
      "            <small class=\"stat-change text-{{ 'success' if stat.change > 0 else 'danger' }}\">",
      "              <i class=\"fa fa-arrow-{{ 'up' if stat.change > 0 else 'down' }}\"></i>",
      "              {{ stat.change|abs }}%",
      "            </small>",
      "          {% endif %}",
      "        </div>",
      "      </div>",
      "    </div>",
      "  {% endfor %}",
      "</div>"
    ],
    "description": "Frappe statistics/metrics display template"
  },
  "frappe_jinja_conditional": {
    "prefix": ["if", "frappe_if"],
    "body": [
      "{% if ${1:condition} %}",
      "  ${2:<!-- Content when condition is true -->}",
      "{% elif ${3:other_condition} %}",
      "  ${4:<!-- Content for other condition -->}",
      "{% else %}",
      "  ${5:<!-- Default content -->}",
      "{% endif %}"
    ],
    "description": "Frappe Jinja conditional statement"
  },
  "frappe_jinja_loop": {
    "prefix": ["for", "frappe_for"],
    "body": [
      "{% for ${1:item} in ${2:items} %}",
      "  ${3:<!-- Loop content -->}",
      "  {% if loop.first %}",
      "    ${4:<!-- First item content -->}",
      "  {% endif %}",
      "  {% if loop.last %}",
      "    ${5:<!-- Last item content -->}",
      "  {% endif %}",
      "{% else %}",
      "  ${6:<!-- Content when no items -->}",
      "{% endfor %}"
    ],
    "description": "Frappe Jinja loop with loop variables"
  },
  "frappe_jinja_currency": {
    "prefix": ["currency", "frappe_currency"],
    "body": [
      "{{ frappe.format_value(${1:amount}, {'fieldtype': 'Currency', 'options': '${2:USD}'}) }}"
    ],
    "description": "Format currency value in Frappe"
  },
  "frappe_jinja_date": {
    "prefix": ["date", "frappe_date"],
    "body": [
      "{{ frappe.format_date(${1:date_value}, '${2:dd-mm-yyyy}') }}"
    ],
    "description": "Format date value in Frappe"
  },
  "frappe_jinja_translate": {
    "prefix": ["translate", "_"],
    "body": [
      "{{ _(\"${1:Text to translate}\") }}"
    ],
    "description": "Translate text in Frappe templates"
  }
}
